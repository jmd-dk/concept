# Fake parameter used to control number of particles/fluid
# elements and PM gridsize.
_size = 4*8  # Must be a multiple of 4

# Input/output
initial_conditions = f'{param.dir}/ic.hdf5'
output_dirs = {
    'snapshot' : f'{param.dir}/output',
    'powerspec': ...,
    'render3D' : ...,
}
output_bases = {
    'snapshot' : 'snapshot',
    'powerspec': 'powerspec',
    'render3D' : 'render3D',
}
output_times = {
    'snapshot' : logspace(log(0.02), log(1), 4, base=e),
    'powerspec': ...,
    'render3D' : ...,
}
powerspec_select = {
    'all': {'data': True, 'linear': False, 'plot': True},
}

# Numerical parameters
boxsize = 128*Mpc
potential_options = {
    'gridsize': {
        'gravity': {
            'pm': _size,
        },
    },
}
powerspec_options = {
    'upstream gridsize': {
        'particles': '2*cbrt(N)',
        'fluid'    : 'gridsize',
    },
    'interpolation': 'PCS',
    'deconvolve'   : True,
    'interlace'    : True,
    'k_max'        : 2*π/boxsize*(_size//2),
}

# Cosmology
H0      = 70*km/(s*Mpc)
Ωcdm    = 0.25
Ωb      = 0.05
a_begin = 0.02

# Physics
select_forces            = {'all': {'gravity': 'pm'}}
select_boltzmann_closure = {'all': 'truncate'}
select_approximations    = {'all': {'P = wρ': True}}

# Simulation options
class_reuse = False
