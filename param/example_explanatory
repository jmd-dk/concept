    # Use a 3-times degenerate neutrino hierarchy
    'N_ur'    : 0,  # No massless neutrinos
    'N_ncdm'  : 1,
    'deg_ncdm': 3,
    'm_ncdm'  : 0.5/3,  # Œ£mŒΩ = 0.5 eV
