    fi
    gsl_test_log="${gsl_dir}/test_log"
    if [ "${gsl_test_success}" == "no" ]; then
        mkdir -p "${gsl_dir}"
        cp "test_log" "${gsl_test_log}"
    fi
    make install 2>&1
    cp "COPYING" "README" "${gsl_dir}/" || :
