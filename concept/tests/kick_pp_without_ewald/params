# Numerical parameters
boxsize = 21*Mpc/h

# Cosmology
H0      = 70*km/s/Mpc
Ωcdm    = 0.25
Ωb      = 0.05
a_begin = 0.02

# Physics
select_forces           = {'matter': {'gravity': 'pp (non-periodic)'}}
select_softening_length = {'matter': '0.03*boxsize/cbrt(N)'}

# Debugging options
enable_class_background = False  # Use the same simplified Friedmann equation as GADGET-2
