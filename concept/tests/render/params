# Directory of this parameter file (non-parameter variable)
_this_dir = os.path.dirname(paths['params'])

# Fake parameter used to control the number of particles
_size = 64

# Input/output
initial_conditions = _this_dir + '/output/snapshot.hdf5'
output_times       = {'render2D': logspace(log(a_begin), log(1), 30, base=e)}
render2D_select    = {'matter': {'terminal image': True}}
snapshot_type      = 'concept'

# Numerical parameters
boxsize = 80*Mpc

# Cosmology
H0      = 70*km/s/Mpc
Ωcdm    = 0.25
Ωb      = 0.05
a_begin = 0.02

# Physics
select_forces = {'matter': {'gravity': 'pm'}}

# Simulation options
random_generator = 'PCG64DXSM'
random_seed      = 2  # 2 (with PCG64DXSM) results in nice looking 2D renders

# Graphics
terminal_width = 80
render2D_options = {
    'terminal resolution': terminal_width,
    'extent'             : 0.1*boxsize,
    'colormap'           : 'inferno',
    'enhance'            : True,
}
